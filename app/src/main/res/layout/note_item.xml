<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/glass_dark"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Color indicator bar -->
        <View
            android:id="@+id/color_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_fab_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Note Title -->
        <TextView
            android:id="@+id/note_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Note Title"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/color_indicator"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Note Content Preview -->
        <TextView
            android:id="@+id/note_content_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Note content preview..."
            android:textColor="@color/text_white_secondary"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/note_title_text"
            app:layout_constraintStart_toEndOf="@id/color_indicator"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/note_timestamp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="2 days ago"
            android:textColor="@color/text_white_hint"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/note_content_text"
            app:layout_constraintStart_toEndOf="@id/color_indicator" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>