<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/glass_dark"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Main content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Color indicator bar -->
            <View
                android:id="@+id/color_indicator"
                android:layout_width="4dp"
                android:layout_height="0dp"
                android:background="@drawable/gradient_fab_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Reserve a tiny end space so text never sits under the check icon -->
            <View
                android:id="@+id/end_guard"
                android:layout_width="32dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Note Title -->
            <TextView
                android:id="@+id/note_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Note Title"
                android:textColor="@color/text_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/color_indicator"
                app:layout_constraintEnd_toStartOf="@id/end_guard" />

            <!-- Note Content Preview -->
            <TextView
                android:id="@+id/note_content_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="Note content preview..."
                android:textColor="@color/text_white_secondary"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/note_title_text"
                app:layout_constraintStart_toEndOf="@id/color_indicator"
                app:layout_constraintEnd_toStartOf="@id/end_guard" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/note_timestamp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="2 days ago"
                android:textColor="@color/text_white_hint"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/note_content_text"
                app:layout_constraintStart_toEndOf="@id/color_indicator" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Selection scrim overlay (on top of everything) -->
        <View
            android:id="@+id/selection_scrim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40FFFFFF"
            android:visibility="gone"/>

        <!-- Check icon (on top of scrim) -->
        <ImageView
            android:id="@+id/check_overlay"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="22dp"
            android:layout_gravity="top|end"
            android:contentDescription="@string/selected"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:visibility="gone"
            app:tint="@color/accent_pink"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>