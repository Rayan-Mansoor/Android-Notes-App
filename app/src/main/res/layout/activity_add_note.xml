<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".AddNoteActivity">

    <!-- Decorative blobs -->
    <View
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:alpha="0.13"
        android:background="@drawable/gradient_fab_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="-80dp"
        android:translationY="-80dp" />

    <!-- Header -->
    <TextView
        android:id="@+id/add_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Note"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_white"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Color Picker Section -->
    <LinearLayout
        android:id="@+id/color_picker_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/add_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/color_amber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            android:background="@drawable/gradient_fab_bg"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/color_rose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            android:background="@drawable/gradient_fab_bg"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/color_violet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            android:background="@drawable/gradient_fab_bg"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/color_cyan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            android:background="@drawable/gradient_fab_bg"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/content_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="100dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/glass_white"
        app:layout_constraintTop_toBottomOf="@id/color_picker_section"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title EditText -->
            <EditText
                android:id="@+id/titleET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:textColorHint="@color/text_white_hint"
                android:textColor="@color/text_white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/edit_text_bg"
                android:padding="16dp"
                android:inputType="text"
                android:minHeight="56dp" />

            <!-- Content EditText -->
            <EditText
                android:id="@+id/contentET"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:hint="Pour your thoughts here..."
                android:textColorHint="@color/text_white_hint"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:background="@drawable/edit_text_bg"
                android:padding="16dp"
                android:gravity="top|start"
                android:inputType="textMultiLine|textCapSentences"
                android:minHeight="200dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Action Buttons Container -->
    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Delete Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/del_note_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:contentDescription="Delete note"
            android:visibility="invisible"
            app:tint="@color/delete_red"
            app:backgroundTint="@color/delete_red_glass"
            app:borderWidth="1dp"
            app:elevation="6dp" />

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:text="Cancel"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/glass_white"
            app:strokeColor="@color/glass_border"
            app:strokeWidth="1dp"
            app:cornerRadius="16dp"
            app:iconTint="@color/text_white" />

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_note_btn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:text="Save"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_baseline_save_24"
            app:backgroundTint="@color/accent_purple"
            app:strokeColor="@color/glass_border"
            app:strokeWidth="1dp"
            app:cornerRadius="16dp"
            app:iconTint="@color/text_white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>