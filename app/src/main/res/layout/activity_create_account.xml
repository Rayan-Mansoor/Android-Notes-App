<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient"
    tools:context=".CreateAccount">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Decorative blobs (unchanged) -->
        <View
            android:id="@+id/blob_signup_1"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:alpha="0.13"
            android:background="@drawable/gradient_fab_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:translationX="100dp"
            android:translationY="-80dp" />

        <View
            android:id="@+id/blob_signup_2"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:alpha="0.12"
            android:background="@drawable/gradient_fab_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:translationX="-80dp"
            android:translationY="100dp" />

        <ImageView
            android:id="@+id/app_logo_signup"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_baseline_star_24"
            android:tint="@color/accent_pink"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/create_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Create Account"
            android:textColor="@color/text_white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/app_logo_signup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/create_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Start capturing your thoughts"
            android:textColor="@color/text_white_secondary"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/create_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Signup Form Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/signup_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/glass_white"
            app:layout_constraintTop_toBottomOf="@id/create_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout3"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    app:boxStrokeColor="@color/accent_purple"
                    app:boxBackgroundColor="@color/glass_dark"
                    app:hintTextColor="@color/text_white_hint"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:startIconDrawable="@drawable/ic_baseline_email_24"
                    app:startIconTint="@color/text_white_hint"
                    app:errorEnabled="true"
                    app:errorTextColor="@color/delete_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/regEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:autofillHints="emailAddress"
                        android:textColor="@color/text_white"
                        android:textColorHint="@color/text_white_hint"
                        android:minHeight="56dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Password"
                    app:boxStrokeColor="@color/accent_purple"
                    app:boxBackgroundColor="@color/glass_dark"
                    app:hintTextColor="@color/text_white_hint"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:startIconDrawable="@drawable/ic_baseline_lock_24"
                    app:startIconTint="@color/text_white_hint"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/text_white_hint"
                    app:errorEnabled="true"
                    app:errorTextColor="@color/delete_red"
                    app:helperText="At least 6 characters"
                    app:helperTextTextColor="@color/text_white_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/regPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:imeOptions="actionNext"
                        android:autofillHints="password"
                        android:textColor="@color/text_white"
                        android:textColorHint="@color/text_white_hint"
                        android:minHeight="56dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password (Go) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Confirm Password"
                    app:boxStrokeColor="@color/accent_purple"
                    app:boxBackgroundColor="@color/glass_dark"
                    app:hintTextColor="@color/text_white_hint"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:startIconDrawable="@drawable/ic_baseline_lock_24"
                    app:startIconTint="@color/text_white_hint"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/text_white_hint"
                    app:errorEnabled="true"
                    app:errorTextColor="@color/delete_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/regRetypePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:imeOptions="actionGo"
                        android:textColor="@color/text_white"
                        android:textColorHint="@color/text_white_hint"
                        android:minHeight="56dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Button with in-button loader -->
                <FrameLayout
                    android:id="@+id/signupBtnContainer"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/regAccBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Create Account"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/accent_purple"
                        app:cornerRadius="16dp"
                        app:elevation="4dp" />

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/btnProgress"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminate="true"
                        app:indicatorColor="@color/white"
                        app:trackThickness="4dp" />
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Login Link -->
        <LinearLayout
            android:id="@+id/login_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/signup_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="@color/text_white_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/loginAccActivityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@color/accent_pink"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
